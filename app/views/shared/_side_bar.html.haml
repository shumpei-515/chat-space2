.chat-side

  .side-header
    .side-headder__box
      %p.side-header__box__user-name
        = current_user.name
    %ul.side-header__icon
      %li.side-header__icon__pencil
        = link_to new_group_path,{class:"icon"} do
          %i.fa.fa-edit
         
      %li.side-header__icon__gear
        = link_to edit_user_path(current_user),{class:"icon"} do
          %i.fa.fa-cog


  .groups
    - current_user.groups.each do |group|
      .groups__log
        = link_to group_messages_path(group) do
          .groups__log__group
            %p.group__group-name 
              = group.name
    
          .groups__log__message
            %p.group__latest-message 
              = group.show_last_message
